<div class="container mt-5 mb-5">
    <h3 class="mt-5 mb-2">Your Component</h3>

    <div class="mb-3 d-flex justify-content-start justify-content-sm-end">
        <a href="/upload/update?componentName={{name}}"><button type="submit" class="btn btn-primary_custom mt-2" id="submitBtn">Update component</button></a>
    </div>

    <dl class="row">
        <dt class="col-3">Component Name :</dt>
        <dd class="col-9">{{name}}</dd>
        <dt class="col-3">Version :</dt>
        <dd class="col-9">{{version}}</dd>
         <dt class="col-3">Publisher :</dt>
        <dd class="col-9">{{publisher}}</dd>
        <dt class="col-3">Generated Link :</dt>
        <dd class="col-9"><a {{#if (eq name 'example-component')}}href="/example.js"{{else}}href="/components/{{namelink}}/{{version}}/{{entryFile}}"{{/if}} download>
                https://store.componento.eu/components/{{namelink}}/{{version}}/{{entryFile}}</a></dd>
        <dt class="col-3">How to use the component :</dt>
        <dd class="col-9 mb-4">{{{information}}}</dd>
    </dl>

    {{#if olderversions}}
    <h3 class="mt-4 mb-3">Older Versions:</h3>
    <table class="table table-hover">
        <thead class="">
            <tr>
                <th scope="col">Version</th>
                <th scope="col">Link</th>
            </tr>
        </thead>
        <tbody>
            {{#each olderversions }}
                <tr>
                    <td>{{this.version}}</td>
                    <td> <a href="/components/{{this.name}}/{{this.version}}/{{this.entry_file}}" download>https://store.componento.eu/components/{{this.name}}/{{this.version}}/{{this.entry_file}}</a> </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}

</div>